<Window x:Class="GW2Trader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:GW2Trader.Properties"
        xmlns:control="clr-namespace:GW2Trader.Control"
        xmlns:view="clr-namespace:GW2Trader.ViewModel"
        Title="MainWindow" Height="350" Width="525">
    
    <Window.Resources>
        <view:MainViewModel x:Key="MainViewModel"/>
    </Window.Resources>
    
    <Grid DataContext="{Binding Source={StaticResource MainViewModel}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem DataContext="{Binding ChildViews[0]}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <control:HidingDataGrid Grid.Row="1" ItemsSource="{Binding Path=Items.View}">
                       
                        <control:HidingDataGrid.Columns>
                            <DataGridTemplateColumn Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding IconImageSource}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </control:HidingDataGrid.Columns>
                             
                    </control:HidingDataGrid>
                </Grid>
            </TabItem>
        </TabControl>
        
     <!--   <Label Grid.Row="1" DataContext="{Binding ElementName=MainViewModel}" Content="{Binding Source=Logger, Path=LastLog}"/> -->
        <Label Grid.Row="1" DataContext="{Binding Logger}" Content="{Binding Path=LastLog}" FontSize="14"/>

    </Grid>
</Window>
